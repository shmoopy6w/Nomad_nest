<% layout("/layouts/boilerplate")%>
<div class="row mt-3 ">
    <h1 class="col-6 offset-3 mb-3">Signup on Nomad Nest</h1>
    <div class="col-6 offset-3 ">
        <form action="/verify" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">  
                <label for="code" class="form-label"> <b>Verification Code sent to <%= email %></b> </label>
                <input 
                  name="code" 
                  id="code"
                  type="code"
                  class="form-control" 
                  required/>
                <input 
                  name="email"
                  id="email"
                  value="<%= email %>"
                  type="email"
                  class="d-none" 
                  required/>
              </div>
        <button class="btn btn-success">Verify</button>
        </form>
    </div>
</div>
